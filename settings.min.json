{
    // File management settings
    "files": {
        "autoSave": "afterDelay", // Automatically save files after a brief delay
        "encoding": "utf8", // Set file encoding to UTF-8 for compatibility
        "trimTrailingWhitespace": true, // Remove trailing whitespace on save
        "insertFinalNewline": true // Ensure files end with a newline
    },

    // Editor settings for fonts and customization
    "editor": {
        "fontFamily": "JetBrains Mono, 'Courier New', monospace", // Font family for readability
        "fontSize": 15, // Font size in the editor
        "fontWeight": "500", // Medium font weight
        "fontLigatures": true, // Enable ligatures for clean coding visuals
        "tabSize": 4, // Set tab size to 4 spaces
        "formatOnPaste": false, // Disable formatting on paste
        "formatOnSave": false, // Disable formatting on save
        "formatOnType": false, // Disable formatting while typing
        "minimap": { "enabled": true }, // Enable minimap for navigation
        "cursor": {
            "blinking": "smooth", // Smooth cursor blinking
            "width": 2, // Cursor width in pixels
            "style": "line" // Line-style cursor
        },
        "renderControlCharacters": true, // Display control characters
        "linkedEditing": true, // Linked editing for HTML/XML tags
        "indentSize": "tabSize", // Match indent size to tab size
        "stickyScroll": { "enabled": false }, // Disable sticky scrolling
        "codeActionsOnSave": {} // Placeholder for save actions
    },

    // Git configuration settings
    "git": {
        "autofetch": true, // Automatically fetch changes
        "confirmSync": false, // Skip confirmation when syncing
        "enableSmartCommit": true, // Enable smart commit functionality
        "enableCommitSigning": true, // Sign commits for verification
        "autoRepositoryDetection": "openEditors" // Detect repositories by open editors
    },

    // Terminal customization
    "terminal": {
        "integrated": {
            "fontSize": 14, // Font size in the terminal
            "cursorBlinking": true, // Enable blinking for the cursor
            "scrollback": 10000, // Increase scrollback buffer size
            "defaultProfile": { "windows": "PowerShell" } // Default terminal profile
        }
    },

    // Workbench theme and layout settings
    "workbench": {
        "colorTheme": "Monokai Pro (Filter Machine)", // Set color theme
        "iconTheme": "material-icon-theme", // Use Material Design icons
        "statusBar": { "visible": true } // Keep the status bar visible
    },

    // Explorer performance and behavior
    "explorer": {
        "compactFolders": false, // Disable folder compaction
        "confirmDragAndDrop": false // Skip drag-and-drop confirmation
    },

    // Workbench editor behavior
    "workbenchEditor": {
        "enablePreview": false, // Disable preview mode
        "showTabs": "multiple", // Display multiple tabs
        "tabSizing": "shrink", // Shrink tabs to save space
        "labelFormat": "short" // Use short labels for tabs
    },

    // File associations for extensions
    "filesAssociations": {
        "*.php": "php", // Associate PHP files
        "*.js": "javascript", // Associate JavaScript files
        "*.css": "css", // Associate CSS files
        "*.html": "html", // Associate HTML files
        "*.json": "json", // Associate JSON files
        "*.ts": "typescript", // Associate TypeScript files
        "*.scss": "scss", // Associate SCSS files
        "*.md": "markdown" // Associate Markdown files
    },

    // Extension update settings
    "extensions": {
        "autoUpdate": true, // Enable automatic updates
        "autoCheckUpdates": true // Automatically check for updates
    },

    // Background customization
    "background": {
        "autoInstall": true, // Automatically install backgrounds
        "editorBackgrounds": [
            "c:/Users/atikh/OneDrive/Pictures/vscode/editor.jpg" // Editor background image
        ],
        "sidebarBackgrounds": [
            "c:/Users/atikh/OneDrive/Pictures/vscode/sidebar.jpg" // Sidebar background image
        ],
        "panelBackgrounds": [
            "c:/Users/atikh/OneDrive/Pictures/vscode/panel.jpg" // Panel background image
        ]
    }
}
