{
    // -- File Management Settings
    "files.autoSave": "afterDelay", // Automatically save files after a brief delay.
    "files.encoding": "utf8", // Set file encoding to UTF-8, ensuring compatibility with various systems.
    "files.trimTrailingWhitespace": true, // Automatically remove trailing whitespace from lines when saving.
    "files.insertFinalNewline": false, // Ensure that files end with a newline, useful for compatibility with some tools.
    "explorer.confirmDragAndDrop": false, // Disable confirmation prompts when dragging and dropping files in the explorer.
    "explorer.confirmPasteNative": false, // Disable confirmation prompts when pasting files in the explorer.

    // -- Font Customization Settings
    "editor.fontFamily": "JetBrains Mono, 'Courier New', monospace", // Set the font family to JetBrains Mono for a programmer-friendly experience.
    "editor.fontSize": 15, // Set font size in the editor for readability.
    "editor.fontWeight": "500", // Use a medium font weight for balanced text visibility.
    "editor.fontLigatures": true, // Enable font ligatures for a modern, clean look in coding fonts.

    // -- Editor Appearance Settings
    "editor.tabSize": 4, // Set the tab size to 4 spaces, which is a common standard.
    "editor.insertSpaces": true, // Use spaces instead of tabs for indentation.
    "[html]": {
        "editor.tabSize": 4
    },
    "[css]": {
        "editor.tabSize": 4
    },
    "[javascript]": {
        "editor.tabSize": 4
    },
    "[php]": {
        "editor.tabSize": 4
    },
    "[json]": {
        "editor.tabSize": 4
    },
    "[typescript]": {
        "editor.tabSize": 4
    },
    "editor.cursorBlinking": "expand", // Enable smooth cursor blinking for a subtle effect.
    "editor.cursorSmoothCaretAnimation": "on", // Enable smooth caret animation for a more modern look.
    "editor.codeActionsOnSave": {}, // Placeholder for any future actions to be executed when saving a file (e.g., format on save).
    "editor.renderControlCharacters": true, // Render control characters (e.g., line breaks) to help with debugging.
    "editor.linkedEditing": true, // Enable linked editing in HTML/XML files, allowing tag names to be edited together.
    "editor.indentSize": "tabSize", // Ensure indent size is consistent with tab size setting.
    "editor.stickyScroll.enabled": false, // Disable sticky scroll in the editor for a more traditional scrolling experience.
    "breadcrumbs.enabled": true, // Disable breadcrumbs in the editor for a cleaner interface.
    "window.titleBarStyle": "custom", // Use a custom title bar style for a modern look.
    "editor.formatOnSave": false, // Disable format on save to avoid automatic formatting when saving files.

    // -- Language Specific Settings
    "security.workspace.trust.untrustedFiles": "open", // Open untrusted files without trust prompts, allowing for quick access to files without security checks.
    "security.workspace.trust.banner": "never", // Disable the workspace trust banner to avoid interruptions when opening files.
    "security.workspace.trust.emptyWindow": false, // Do not show the trust prompt when opening an empty window, allowing for a smoother startup experience.
    "security.workspace.trust.enabled": false, // Disable workspace trust to allow unrestricted access to files without trust prompts.

    // -- HTML Formatting
    "html.format.wrapLineLength": 0, // Disable line wrapping in HTML formatting to keep tags on a single line.
    "html.format.indentInnerHtml": true, // Indent inner HTML content for better readability.

    // -- Git Settings
    "git.autofetch": true, // Automatically fetch changes from remote repositories for easy synchronization.
    "git.confirmSync": false, // Disable confirmation prompts when syncing with the repository.
    "git.enableSmartCommit": true, // Automatically commit all staged changes without confirmation.
    "git.enableCommitSigning": true, // Enable commit signing for verification of authorship.
    "git.autoRepositoryDetection": "openEditors", // Detect git repositories based on the open editors, rather than the workspace.

    // -- Terminal Settings
    "terminal.integrated.scrollback": 10000, // Increase the scrollback buffer in the terminal to store more output.
    "terminal.integrated.defaultProfile.windows": "Command Prompt", // Set Command Prompt as the default terminal profile on Windows.

    // -- Theme and Icon Settings
    "workbench.colorTheme": "Monokai Pro (Filter Machine)", // Set the color theme to Monokai Pro for a visually pleasing and high-contrast interface.
    "workbench.iconTheme": "material-icon-theme", // Use the Material Design icon theme for a modern and familiar icon style.
    "workbench.statusBar.visible": true, // Keep the status bar visible to display important information.

    // -- Advanced Performance Settings
    "explorer.compactFolders": false, // Disable folder compaction in the explorer for easier navigation of complex directory structures.
    "workbench.editor.enablePreview": true, // Disable preview mode to always open files in full editor mode.
    "workbench.editor.showTabs": "multiple", // Always display multiple tabs for easier file switching.
    "workbench.editor.tabSizing": "shrink", // Set the tab size to shrink when there are multiple open tabs, saving space.
    "workbench.secondarySideBar.defaultVisibility": "hidden", // Hide the secondary sidebar by default to reduce clutter.

    // -- Background Images
    "background.autoInstall": true, // Automatically install recommended extensions for background images.
    "background.editorBackgrounds": ["https://raw.githubusercontent.com/atikhasan392/.vscode/refs/heads/main/background/editor/1.jpg"], // Set a custom background image for the editor.
    "background.sidebarBackgrounds": ["https://raw.githubusercontent.com/atikhasan392/.vscode/refs/heads/main/background/sidebar/1.jpg"], // Set a custom background image for the sidebar.
    "background.panelBackgrounds": ["https://raw.githubusercontent.com/atikhasan392/.vscode/refs/heads/main/background/panel/1.jpg"], // Set a custom background image for the panel.

    // -- Copilot Settings
    "github.copilot.enable": {
        "*": false,
        "plaintext": true,
        "markdown": true,
        "scminput": true
    },
}
